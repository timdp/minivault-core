{
  "name": "minivault-core",
  "version": "0.2.2",
  "description": "A pretty rudimentary vault.",
  "keywords": [
    "vault",
    "secret",
    "encrypt",
    "encryption",
    "password"
  ],
  "author": "Tim De Pauw <hi@tmdpw.eu> (https://tmdpw.eu/)",
  "engines": {
    "node": ">=0.10.0"
  },
  "dependencies": {
    "es6-promisify": "^1.1.1",
    "mkdirp": "^0.5.0",
    "read": "^1.0.5",
    "user-home": "^1.1.1"
  },
  "devDependencies": {
    "chai": "^3.0.0",
    "chai-as-promised": "^5.1.0",
    "coveralls": "^2.11.2",
    "istanbul": "^0.3.13",
    "mocha": "^2.2.4",
    "mocha-lcov-reporter": "0.0.2",
    "standard": "^4.0.1",
    "tmp": "0.0.26"
  },
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "scripts": {
    "test": "npm run standard && npm run mocha && ( node --version | grep -qv ^v0\\.10\\. || npm run coveralls )",
    "standard": "node node_modules/standard/bin/cmd.js",
    "mocha": "node node_modules/mocha/bin/_mocha",
    "cover": "node node_modules/istanbul/lib/cli.js cover node_modules/mocha/bin/_mocha -- -R spec",
    "coveralls": "node node_modules/istanbul/lib/cli.js cover node_modules/mocha/bin/_mocha --report lcovonly -- -R spec && node node_modules/coveralls/bin/coveralls.js < coverage/lcov.info && rm -rf coverage"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/timdp/minivault-core"
  },
  "bugs": {
    "url": "https://github.com/timdp/minivault-core/issues"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://raw.githubusercontent.com/timdp/minivault-core/master/LICENSE"
    }
  ]
}
